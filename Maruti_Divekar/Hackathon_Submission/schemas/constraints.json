{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResearchConstraints",
  "type": "object",
  "properties": {
    "time_window": {"type":"string","pattern":"^\\d{4}-\\d{2}-\\d{2}\\.\\.\\d{4}-\\d{2}-\\d{2}$"},
    "domains": {"type":"array","items":{"type":"string"}},
    "max_budget_usd": {"type":"number","minimum":0},
    "max_tokens": {"type":"integer","minimum":1000},
    "disallowed_sources": {"type":"array","items":{"type":"string"}},
    "depth": {"type":"string","enum":["shallow","deep"]}
  },
  "additionalProperties": false
}
