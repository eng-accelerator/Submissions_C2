{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResearchReport",
  "type": "object",
  "required": ["query","plan","claims","meta"],
  "properties": {
    "query": {"type":"string"},
    "plan": {"type":"object"},
    "claims": {
      "type":"array",
      "items": {"type":"object","required":["claim_id","claim","evidence","verified"]}
    },
    "meta": {"type":"object"}
  }
}
